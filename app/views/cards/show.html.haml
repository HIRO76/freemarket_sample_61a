.user-card__wrapper
  %h2 クレジットカード情報
  .user-card__content
    %figure.form-space
    = image_tag "#"
      .user-card__content--number.form-space
        %h3 
          = "#{**** **** **** @user_card.last4}"
      .user-card__content--expired.form-space
        - exp_month = @user_card.exp_month.to_s
        - exp_year = @user_card.exp_year.to_s.slice(2, 3)
        %h3 
          = "#{exp_month / exp_year}"
      = link_to "delete_cards_path", method: :delete, class: "user-card__content--btn" do
        %button{ type: "submit", class: "btn" } 削除する



.item-index__wrapper
  .item-index__container 
    .bread-crumds
      %ul.bread-crumds__list
        %li
          = link_to "" do
            %span<> 
              メルカリ
          %i.fas.chevron-right
        %li マイページ

    .mypage-container
      .card__content
        %p 支払い方法
        .card__content__box
          %p クレジットカード一覧
          -# = "**** **** **** #{@card_infomation.last4}"
          .card
            %i.far.fa-credit-card
            

          .payment
            = link_to '支払い方法について＞', 'https://www.mercari.com/jp/help_center/category/6/', method: :get, class: 'payment__link'

      .side-mypage
        = render 'users/side_bar'
