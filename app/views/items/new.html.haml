  .exhibit-wrapper
    .exhibit-wrapper__header
      .exhibit-wrapper__header__logo
        = link_to "#" do
          =image_tag(alt: "Mercari", src: "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg", class: "mercari-logo")
    .exhibit-wrapper__main
