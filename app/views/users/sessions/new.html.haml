.new-devise__wrapper
  .new-devise__container
    / ヘッダー
    .new-devise__header
      .new-devise__header__contents
        .new-devise__header__contents-top
          .new-devise__header__contents-top-logo
            = link_to "#" do
              = image_tag('https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg', class: 'mercari-logo new-devise__header__contents-top-logo__mercari-logo', alt: 'Mercari')

  -# コンテンツ
  .devise-main__session
    .devise-main__session__registration
      %p.devise-main__session__registration__head
        アカウントをお持ちでない方はこちら
      =link_to '新規会員登録', "#", class: 'devise-main__session__registration__link'

    .devise-main__session__omniauth
      = link_to "#", class: 'devise-main__session__omniauth__facebook' do
        %i.fab.fa-facebook-square
        Facebookでログイン
      = link_to "#", class: 'devise-main__session__omniauth__google' do
        %i.fab.fa-google
        Googleでログイン

    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-main__session__form' }) do |f|
      .devise-main__session__form__field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
        - if resource.errors.messages[:email].present?
          - resource.errors.messages[:email].each do |message|
            %p.devise-main__session__form__field__error= message
      .devise-main__session__form__field
        = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード'
        - if resource.errors.messages[:password].present?
          - resource.errors.messages[:password].each do |message|
            %p.devise-main__session__form__field__error= message
      .devise-main__session__form__actions
        = f.submit "ログイン"
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        = link_to 'パスワードをお忘れの方', '#', class: 'devise-main__session__form__actions__forgetting'
